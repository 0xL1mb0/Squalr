<UserControl
    x:Class="Squalr.View.Browse.Library.LibraryHome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:browse="clr-namespace:Squalr.View.Browse"
    xmlns:converters="clr-namespace:Squalr.Source.Mvvm.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:library="clr-namespace:Squalr.View.Browse.Library"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Squalr.Source.Browse.Library"
    x:Name="SqualrLibraryHome"
    d:DesignHeight="256"
    d:DesignWidth="256"
    x:ClassModifier="internal"
    DataContext="{Binding LibraryViewModel, Source={StaticResource ViewModelLocator}}"
    mc:Ignorable="d">
    <x:Code>
        <![CDATA[ public LibraryHome() { InitializeComponent(); }]]>
    </x:Code>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:LibraryViewToVisibilityConverter x:Key="LibraryViewToVisibilityConverter" />
    </UserControl.Resources>
    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Offset="0.0" Color="Transparent" />
                            <GradientStop Offset="0.5" Color="MediumPurple" />
                            <GradientStop Offset="1.0" Color="Transparent" />
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="32"
                    Foreground="White"
                    Opacity="0.5"
                    Text="LIBRARY">
                    <TextBlock.Effect>
                        <BlurEffect KernelType="Gaussian" Radius="8.0" />
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock
                    HorizontalAlignment="Center"
                    FontSize="32"
                    Foreground="LightCyan"
                    Text="LIBRARY" />
            </Grid>
            <Grid Grid.Row="1" Background="{StaticResource AvalonDock_Expression_BaseColor3}">
                <Grid Visibility="{Binding CurrentView, Converter={StaticResource LibraryViewToVisibilityConverter}, ConverterParameter={x:Static viewModel:LibraryView.GameSelect}}">
                    <library:GamesPage />
                </Grid>
                <Grid Visibility="{Binding CurrentView, Converter={StaticResource LibraryViewToVisibilityConverter}, ConverterParameter={x:Static viewModel:LibraryView.LibrarySelect}}">
                    <library:LibrariesPage />
                </Grid>
                <Grid Visibility="{Binding CurrentView, Converter={StaticResource LibraryViewToVisibilityConverter}, ConverterParameter={x:Static viewModel:LibraryView.Loading}}">
                    <browse:LoadingPage />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>