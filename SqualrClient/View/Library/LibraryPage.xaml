<UserControl
    x:Class="SqualrClient.View.Browse.Library.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SqualrCore.Source.Mvvm.Converters;assembly=SqualrCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:loaders="clr-namespace:SqualrCore.View.Loaders;assembly=SqualrCore"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SqualrLibraryPage"
    d:DesignHeight="480"
    d:DesignWidth="480"
    x:ClassModifier="internal"
    DataContext="{Binding LibraryViewModel, Source={StaticResource ViewModelLocator}}"
    mc:Ignorable="d">
    <x:Code>
        <![CDATA[ public LibraryPage() { InitializeComponent(); }]]>
    </x:Code>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Border>
        <Grid Background="{StaticResource AvalonDock_Expression_BaseColor3}">

            <Border
                Grid.Row="0"
                BorderBrush="White"
                BorderThickness="1">
                <Grid Name="SelectedLibraryPanel">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ListView
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            BorderThickness="0">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.Template>
                                <ControlTemplate>
                                    <Grid HorizontalAlignment="Left">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid
                                            Grid.Row="0"
                                            Width="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}"
                                            VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Grid.Resources>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Margin" Value="5,0" />
                                                    <Setter Property="Foreground" Value="{StaticResource AvalonDock_Expression_BaseColor2}" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                </Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="BorderThickness" Value="0" />
                                                    <Setter Property="Padding" Value="8,4,8,4" />
                                                    <Setter Property="Background" Value="{StaticResource AvalonDock_Expression_BaseColor4}" />
                                                </Style>
                                            </Grid.Resources>
                                            <Border Grid.Column="0">
                                                <WrapPanel>
                                                    <TextBlock
                                                        Margin="0"
                                                        Padding="0"
                                                        Text="Library - " />
                                                    <TextBox
                                                        MinWidth="96"
                                                        Margin="0"
                                                        Padding="0"
                                                        Background="{StaticResource AvalonDock_Expression_BaseColor4}"
                                                        Foreground="{StaticResource AvalonDock_Expression_BaseColor12}"
                                                        Style="{StaticResource PlaceHolder}"
                                                        Tag="Library Name"
                                                        Text="{Binding SelectedLibraryName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                                </WrapPanel>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </ControlTemplate>
                            </ListView.Template>
                        </ListView>
                    </Grid>

                    <Grid Grid.Row="1" Background="{StaticResource AvalonDock_Expression_BaseColor3}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Border BorderBrush="{StaticResource AvalonDock_Expression_BaseColor2}" BorderThickness="1">
                                <ListView
                                    Grid.Row="0"
                                    Background="{StaticResource AvalonDock_Expression_BaseColor3}"
                                    BorderThickness="0"
                                    ItemsSource="{Binding CheatsInLibrary}">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                        </Style>
                                    </ListView.ItemContainerStyle>
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Menu Grid.Column="0" Background="{StaticResource AvalonDock_Expression_BaseColor3}">
                                                    <MenuItem
                                                        Command="{Binding ElementName=SqualrLibrariesPage, Path=DataContext.RemoveCheatFromLibraryCommand}"
                                                        CommandParameter="{Binding .}"
                                                        ToolTip="Remove Cheat">
                                                        <MenuItem.Header>
                                                            <Image
                                                                Width="16"
                                                                Height="16"
                                                                Source="pack://application:,,,/SqualrCore;component/Content/Images/X.png" />
                                                        </MenuItem.Header>
                                                    </MenuItem>
                                                </Menu>
                                                <TextBlock
                                                    Grid.Column="1"
                                                    Foreground="{StaticResource AvalonDock_Expression_BaseColor12}"
                                                    Text="{Binding Path=CheatName}">
                                                    <TextBlock.InputBindings>
                                                        <MouseBinding
                                                            Command="{Binding LibraryViewModel.SelectCheatCommand, Source={StaticResource ViewModelLocator}}"
                                                            CommandParameter="{Binding .}"
                                                            Gesture="LeftDoubleClick" />
                                                    </TextBlock.InputBindings>
                                                </TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>

            <Grid Grid.Row="0" Visibility="{Binding IsLibraryLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <loaders:SpinnerCogs
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </Grid>
        </Grid>
    </Border>
</UserControl>