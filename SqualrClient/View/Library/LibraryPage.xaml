<UserControl
    x:Class="SqualrClient.View.Browse.Library.LibraryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:SqualrCore.Source.Mvvm.Converters;assembly=SqualrCore"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:intr="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:loaders="clr-namespace:SqualrCore.View.Loaders;assembly=SqualrCore"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SqualrLibraryPage"
    d:DesignHeight="480"
    d:DesignWidth="480"
    x:ClassModifier="internal"
    DataContext="{Binding LibraryViewModel, Source={StaticResource ViewModelLocator}}"
    mc:Ignorable="d">
    <x:Code>
        <![CDATA[ public LibraryPage() { InitializeComponent(); }]]>
    </x:Code>
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Border>
        <Grid Background="{StaticResource AvalonDock_Expression_BaseColor3}">
            <Grid Name="SelectedLibraryPanel">
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Background="{StaticResource AvalonDock_Expression_BaseColor3}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <ListView
                            Grid.Row="0"
                            Background="{StaticResource AvalonDock_Expression_BaseColor3}"
                            BorderThickness="0"
                            ItemsSource="{Binding CheatsInLibrary}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.InputBindings>
                                            <MouseBinding
                                                Command="{Binding LibraryViewModel.SelectCheatCommand, Source={StaticResource ViewModelLocator}}"
                                                CommandParameter="{Binding .}"
                                                Gesture="LeftClick" />
                                        </Grid.InputBindings>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0" Grid.ColumnSpan="3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Rectangle Grid.Column="0">
                                                <Rectangle.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Offset="0.0" Color="Red" />
                                                        <GradientStop Offset="{Binding Path=CooldownProgress, FallbackValue='0.0'}" Color="Transparent" />
                                                    </LinearGradientBrush>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                        </Grid>
                                        <CheckBox
                                            Grid.Column="0"
                                            Width="16"
                                            Height="16"
                                            Margin="0,0,4,0"
                                            IsChecked="{Binding Path=IsActivated}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Foreground="{StaticResource AvalonDock_Expression_BaseColor12}"
                                            IsHitTestVisible="False"
                                            Text="{Binding Path=CheatName}" />
                                        <Menu Grid.Column="2" Background="{StaticResource AvalonDock_Expression_BaseColor3}">
                                            <MenuItem
                                                Command="{Binding LibraryViewModel.RemoveCheatFromLibraryCommand, Source={StaticResource ViewModelLocator}}"
                                                CommandParameter="{Binding .}"
                                                ToolTip="Remove Cheat">
                                                <MenuItem.Header>
                                                    <Image
                                                        Width="16"
                                                        Height="16"
                                                        Source="pack://application:,,,/SqualrCore;component/Content/Images/X.png" />
                                                </MenuItem.Header>
                                            </MenuItem>
                                        </Menu>
                                        <Grid
                                            Grid.Column="0"
                                            Grid.ColumnSpan="3"
                                            IsHitTestVisible="False">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>
                                            <Rectangle Grid.Column="1">
                                                <Rectangle.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Offset="0.0" Color="#7F606060" />
                                                        <GradientStop Offset="{Binding Path=DurationProgress, FallbackValue='0.0'}" Color="Transparent" />
                                                    </LinearGradientBrush>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Row="0" Visibility="{Binding IsLibraryLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <loaders:SpinnerCogs
                    Margin="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </Grid>
        </Grid>
    </Border>
</UserControl>